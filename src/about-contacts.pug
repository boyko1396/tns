    script.
      // collapse faq card
      const toggleButtons = document.querySelectorAll('.js-faq-card-toggle');

      toggleButtons.forEach(function(button) {
        button.addEventListener('click', function() {
          const card = button.closest('.faq-card');
          
          const isCardShown = card.classList.contains('is-show');
          
          toggleButtons.forEach(function(btn) {
            btn.closest('.faq-card').classList.remove('is-show');
          });
          
          if (!isCardShown) {
            card.classList.add('is-show');
          }
        });
      });
